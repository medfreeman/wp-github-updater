<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
	<description>The coding standard for wp-github-updater.</description>

	<file>./</file>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/wpcs/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<arg name="warning-severity" value="0"/>

	<rule ref="WordPress">
		<!-- Waiting for integration of issue's fix in wp coding standards https://github.com/squizlabs/PHP_CodeSniffer/issues/1112 -->
		<exclude name="Squiz.Commenting.FileComment.Missing" />
	</rule>
	<rule ref="Wordpress-Extra"/>
</ruleset>